<h1>Add A New User</h1>

<%= form_for @user do |f| %>
	<p><div class= "form_field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div></p>
	<p><div class= "form_field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div></p>
	<p><div class= "form_field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div></p>
		<p><div class= "form_field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div></p>
	<p><div class= "button">
		<%= f.submit "User BITCH" %>
	</div></p>



<% end %>